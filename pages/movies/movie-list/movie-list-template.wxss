.movie-list-box {
    background: #fff;
    display: flex;
    flex-direction: column;
    margin: 0 0 30rpx 0;
}

.movie-header {
    padding: 30rpx 30rpx 22rpx;
}

.slogan {
    font-size: 24rpx;
}

.more {
    float: right;
}

.more-text {
    vertical-align: middle;
    margin-right: 10rpx;
    color: #1f4ba5;
    font-size: 14px;
}

.more-img {
    width: 9rpx;
    height: 16rpx;
    vertical-align: middle;
}

.movie-te {
    display: flex;
    flex-direction: row;
    margin: 0 auto 20rpx auto;
}